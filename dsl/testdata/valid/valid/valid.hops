schedule foo {
  cron = "@daily"
  inputs = {

  }
}

on change_merged {
  name = "a_sensor"
  if = true == true && glob("foo", "fo*")
  handler = "handler"
}

on change {
  name = "another_sensor"
}

// An on block with index based name, due to omitted name field
on change {
  script = <<-EOT
  console.log("Hello world!")
  EOT
}

on change_no_such_action {
  name = "non_matching_sensor"
  script = <<-EOT
  console.log("Hello world!")
  EOT
}

task foo {}
